{
  "name": "nextjs-app-custom-template",
  "description": "nextjs custom boilerplate with db and docker to test glazeen cli new feature!!",
  "prompts": [
    {
      "key": "project_name",
      "type": "text",
      "message": "Insert your Project Name:",
      "default": "new-nextjs-app"
    },
    {
      "key": "project_description",
      "type": "text",
      "message": "Insert a brief description of your project:",
      "default": "new nextjs app"
    },
    {
      "key": "docker_port",
      "type": "text",
      "message": "On which port do you want to expose the Docker app?",
      "default": "3000"
    }
  ],
  "post_create": [
    {
      "command": "pnpm install",
      "response_message": "Installing dependencies (pnpm install)..."
    },
    {
      "command": "echo 'Hello World'",
      "response_message": "Hello World"
    }
  ]
}
